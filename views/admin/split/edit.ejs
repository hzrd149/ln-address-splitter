<h1><%- splitAddress %></h1>

<form
  action="/admin/split/<%- split.name %>/edit/<%- payout.address %>"
  method="post"
>
  <label for="address">Add Address</label>
  <div class="h-stack flex-wrap">
    <input
      class="mb-0"
      type="email"
      id="address"
      name="address"
      style="flex: 2; min-width: 2in"
      readonly
      value="<%- payout.address %>"
    />
    <input
      class="mb-0"
      type="number"
      name="weight"
      min="1"
      size="3"
      step="1"
      placeholder="weight"
      style="flex: 1; min-width: 1in"
      required
      value="<%- payout.weight %>"
    />
    <button class="button button-outline mb-0">Save</button>
  </div>
</form>
