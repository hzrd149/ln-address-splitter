<h1><%- splitAddress %></h1>

<form
  action="/admin/split/<%- split.name %>/remove/<%- address %>"
  method="post"
>
  <div class="card" style="max-width: 6in">
    <div class="card-header">Remove <%- address %>?</div>
    <div class="card-body">
      Are you sure you want to remove <%- address %> from <%- split.name %>@<%-
      publicDomain %>?
    </div>
    <div class="card-footer h-stack" style="flex-direction: row-reverse">
      <button class="button button-red" type="submit">Remove</button>
      <a class="button button-clear" href="/admin/split/<%- split.name %>"
        >Cancel</a
      >
    </div>
  </div>
</form>
