<h1>Create Split</h1>

<form action="/admin/create" method="post">
  <div class="h-stack">
    <div style="flex: 1">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required />
    </div>
    <div style="flex: 1">
      <label for="domain">Domain</label>
      <input
        type="text"
        id="domain"
        name="domain"
        required
        value="<%- hostname %>"
      />
    </div>
  </div>
